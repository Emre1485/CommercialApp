@model CommercialApp.Models.Product

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ürün Güncelle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Brand)
                @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Stock)
                @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.BuyingPrice)
                @Html.TextBoxFor(x => x.BuyingPrice, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.SellingPrice)
                @Html.TextBoxFor(x => x.SellingPrice, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Image)
                @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="State" name="State" value="true" @(Model.State ? "checked" : "") />
                    <label class="form-check-label" for="State">
                        @Html.DisplayNameFor(model => model.State)
                    </label>
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.CategoryId, "Kategori")
                @Html.DropDownListFor(x => x.CategoryId,
                         new SelectList(ViewBag.Categories, "Id", "Name"),
                         "Kategori Seçiniz",
                         new { @class = "form-control" })
            </div>

            <button class="btn btn-warning">Güncelle</button>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Geri dön</a>
</div>
