@model List<SaleTransaction>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<hr />

<h1>Satış Detayları</h1>

<hr />

<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Satış Id</th>
            <th>Ürün</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Tarih</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.Id</td>
                <td>@sale.Products.Name</td>
                <td>@sale.Quantity</td>
                <td>@sale.Price</td>
                <td>@sale.TotalAmount</td>
                <td>@sale.CustomerAccounts.Name @sale.CustomerAccounts.Surname</td>
                <td>@sale.Employees.Name @sale.Employees.Surname</td>
                <td>@sale.TransactionDate</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Print" class="btn btn-dark">Yazdır</a>