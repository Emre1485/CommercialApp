@model List<SaleTransaction>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table id="tblSaleIndex" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <td>Id</td>
            <td>Ürün</td>
            <td>Cari</td>
            <td>Personel</td>
            <td>Adet</td>
            <td>Fiyat</td>
            <td>Toplam Tutar</td>
            <td>Tarih</td>
            <td>Detay</td>
            <td>Güncelle</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var sal in Model)
        {
            <tr>
                <td>@sal.Id</td>
                <td>@(sal.Products != null ? sal.Products.Name : "Ürün bilgisi yok")</td>
                <td>@(sal.CustomerAccounts != null ? sal.CustomerAccounts.Name + " " + sal.CustomerAccounts.Surname : "Cari bilgisi yok")</td>
                <td>@(sal.Employees != null ? sal.Employees.Name + " " + sal.Employees.Surname : "Personel bilgisi yok")</td>

                <td>@sal.Quantity</td>
                <td>@sal.Price</td>
                <td>@sal.TotalAmount</td>
                <td>@sal.TransactionDate</td>
                <td><a asp-action="Details" asp-controller="Sale" asp-route-id="@sal.Id" class="btn btn-info">Detay</a></td>
                <td><a asp-action="UpdateSale" asp-route-id="@sal.Id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="CreateSale" class="btn btn-primary">Satış Yap</a>



