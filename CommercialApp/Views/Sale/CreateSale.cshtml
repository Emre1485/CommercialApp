@model CommercialApp.Models.SaleTransaction

@{
    ViewData["Title"] = "CreateSale";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Satış Yap</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSale">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductsId" class="control-label">Ürün</label>
                <select asp-for="ProductsId" class="form-control" asp-items="ViewBag.Prods"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Adet</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Fiyat</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label">Toplam Tutar</label>
                <input asp-for="TotalAmount" class="form-control" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerAccountsId" class="control-label">Cari</label>
                <select asp-for="CustomerAccountsId" class="form-control" asp-items="ViewBag.CustomerAccs"></select>
            </div>
            <div class="form-group">
                <label asp-for="EmployeesId" class="control-label">Personel</label>
                <select asp-for="EmployeesId" class="form-control" asp-items="ViewBag.Employees"></select>
            </div>
            <div class="form-group">
                <label asp-for="TransactionDate" class="control-label">İşlem Tarihi</label>
                <input asp-for="TransactionDate" class="form-control" />
                <span asp-validation-for="TransactionDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri dön</a>
</div>

