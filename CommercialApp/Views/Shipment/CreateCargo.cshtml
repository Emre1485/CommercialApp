@model CommercialApp.Models.Cargo

@{
    ViewData["Title"] = "CreateCargo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="row">
    <div class="col-md-4">
        <form class="form-group" method="post">
            @Html.LabelFor(x => x.TrackingNumber)
            <input type="text" value="@ViewBag.CargoCode" readonly class="form-control" name="TrackingNumber" />
            <br />
            @Html.LabelFor(x => x.Receiver)
            @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
            <br />
            @Html.LabelFor(x => x.Employee)
            @Html.TextBoxFor(x => x.Employee, new { @class = "form-control" })
            <br />
            
            @Html.LabelFor(x => x.Description)
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
            <br />
            <button class="btn btn-success">Kaydet</button>
        </form>
        
    </div>
</div>

<div>
    <a asp-action="Index">Geri dön</a>
</div>

