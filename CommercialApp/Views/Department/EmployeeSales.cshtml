@model List<SaleTransaction>
@{
    ViewData["Title"] = "EmployeeSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Personel Satışları</h1>

<hr />

<ol class="breadcrumb mp-4">
    <li class="breadcrumb-item active">Personel Adı: @ViewBag.per</li>
</ol>


<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Satış Id</th>
            <th>Ürün</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Cari</th>
            <th>Tarih</th>
            <th>Yazdır</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.Id</td>
                <td>@sale.Products.Name</td>
                <td>@sale.Quantity</td>
                <td>@sale.Price</td>
                <td>@sale.TotalAmount</td>
                <td>@sale.CustomerAccounts.Name @sale.CustomerAccounts.Surname</td>
                <td>@sale.TransactionDate</td>
                <td><a asp-action="Print" class="btn btn-dark">Yazdır</a> </td>
            </tr>
        }
    </tbody>
</table>