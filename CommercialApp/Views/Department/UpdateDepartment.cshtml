@model CommercialApp.Models.Department

@{
    ViewData["Title"] = "UpdateDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Departman Güncelle</h1>

<hr />

@using (Html.BeginForm("UpdateDepartment", "Department", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="State" name="State" value="true" @(Model.State ? "checked" : "") />
            <label class="form-check-label" for="State">
                @Html.DisplayNameFor(model => model.State)
            </label>
        </div>
    </div>
    <button class="btn btn-warning">Güncelle</button>
}

<div>
    <a asp-action="Index">Geri dön</a>
</div>

