@model CommercialApp.Models.Invoice

@{
    ViewData["Title"] = "UpdateInvoice";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Fatura Güncelle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("UpdateInvoice", "Invoice", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                @Html.LabelFor(x => x.InvoiceSeries)
                @Html.TextBoxFor(x => x.InvoiceSeries, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.InvoiceNumber)
                @Html.TextBoxFor(x => x.InvoiceNumber, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Date)
                @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Time)
                @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.TaxOffice)
                @Html.TextBoxFor(x => x.TaxOffice, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Sender)
                @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Receiver)
                @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
            </div>

            

            <button class="btn btn-warning">Güncelle</button>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Geri dön</a>
</div>
